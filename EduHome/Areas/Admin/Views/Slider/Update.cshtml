@model Slider
@{
    ViewData["Title"] = "Update";
}
<div class="row mt-3">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Teacher</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="mt-3" asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" placeholder="Name">
                        <span asp-validation-for="Photo" class="text-danger"></span>

                        <label  class="mt-3" asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="descroption">
                        <span asp-validation-for="Title" class="text-danger"></span>

                        <label  class="mt-3" asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="descroption">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-warning mr-2">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>