@model HomeBio
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Home Bio</h4>
                <a asp-controller="HomeBio" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success mt-3">Update Bio</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    HeaderLogo
                                </th>
                                <th>
                                    Adress
                                </th>
                                <th>
                                    Telephone
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Website
                                </th>
                                <th>
                                    Facebook
                                </th>
                                <th>
                                    Twitter
                                </th>
                                <th>
                                    Youtube
                                </th>
                                <th>
                                    Instagram
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img src="~/img/logo/@Model.HeaderLogo" style="width:100px;height:40px; border-radius:0px " />
                                </td>
                                <td>
                                    @Model.Adress
                                </td>
                                <td>
                                    @Model.Telephone
                                </td>
                                <td>
                                    @Model.Email
                                </td>
                                <td>
                                    @Model.WebSite
                                </td>
                                <td>
                                    @Model.Facebook
                                </td>
                                <td>
                                    @Model.Twitter
                                </td>
                                <td>
                                    @Model.Youtube
                                </td>
                                <td>
                                    @Model.Instagram
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

