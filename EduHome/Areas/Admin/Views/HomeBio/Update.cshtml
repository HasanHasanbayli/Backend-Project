@model HomeBio
@{
    ViewData["Title"] = "Update";
}

<div class="row mt-3">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Bio</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Name">
                        <span asp-validation-for="Photo" class="text-danger"></span>

                        <label asp-for="Adress"></label>
                        <input asp-for="Adress" class="form-control" placeholder="descroption">
                        <span asp-validation-for="Adress" class="text-danger"></span>

                        <label asp-for="Telephone"></label>
                        <input asp-for="Telephone" class="form-control" placeholder="descroption">
                        <span asp-validation-for="Telephone" class="text-danger"></span>

                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="descroption">
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <label asp-for="WebSite"></label>
                        <input asp-for="WebSite" class="form-control" placeholder="descroption">
                        <span asp-validation-for="WebSite" class="text-danger"></span>

                        <label asp-for="Facebook"></label>
                        <input asp-for="Facebook" class="form-control" placeholder="title">
                        <span asp-validation-for="Facebook" class="text-danger"></span>

                        <label asp-for="Instagram"></label>
                        <input asp-for="Instagram" class="form-control" placeholder="title">
                        <span asp-validation-for="Instagram" class="text-danger"></span>

                        <label asp-for="Twitter"></label>
                        <input asp-for="Twitter" class="form-control" placeholder="title">
                        <span asp-validation-for="Twitter" class="text-danger"></span>

                        <label asp-for="Youtube"></label>
                        <input asp-for="Youtube" class="form-control" placeholder="title">
                        <span asp-validation-for="Youtube" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-warning mr-2">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>