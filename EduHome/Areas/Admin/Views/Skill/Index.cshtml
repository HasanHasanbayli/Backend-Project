@model IEnumerable<Skill>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Skill</h4>
                <a class="btn btn-success mb-2" asp-action="Create">Create Skill</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Teacher
                                </th>
                                <th>
                                    Language
                                </th>
                                <th>
                                    TeamLeader
                                </th>
                                <th>
                                    Development
                                </th>
                                <th>
                                    Design
                                </th>
                                <th>
                                    Innovation
                                </th>
                                <th>
                                    Communication
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Skill item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Teacher.FullName
                                    </td>
                                    <td>
                                        @item.Language
                                    </td>
                                    <td>
                                        @item.TeamLeader
                                    </td>
                                    <td>
                                        @item.Development
                                    </td>
                                    <td>
                                        @item.Design
                                    </td>
                                    <td>
                                        @item.Innovation
                                    </td>
                                    <td>
                                        @item.Communication
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


