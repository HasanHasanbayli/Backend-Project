@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Teachers</h4>
                    <a class="btn btn-success mb-2" asp-action="Create">Create Teacher</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    FullName
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    Degree
                                </th>
                                <th>
                                    Experience
                                </th>
                                <th>
                                    Hobbies
                                </th>
                                <th>
                                    Faculty
                                </th>
                                <th>
                                    Mail
                                </th>
                                <th>
                                    Call
                                </th>
                                <th>
                                    Skype
                                </th>
                                <th>
                                    Facebook
                                </th>
                                <th>
                                    Pinterest
                                </th>
                                <th>
                                    Vkontakte
                                </th>
                                <th>
                                    Twitter
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Teacher item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/img/teacher/@item.Image" style="width:100px;height:100px; border-radius:0px " />
                                </td>
                                <td>
                                    @item.FullName
                                </td>
                                <td>
                                    @item.Position
                                </td>
                                <td>
                                    @item.Degree
                                </td>
                                <td>
                                    @item.Experience
                                </td>
                                <td>
                                    @item.Hobbies
                                </td>
                                <td>
                                    @item.Faculty
                                </td>
                                <td>
                                    @item.Mail
                                </td>
                                <td>
                                    @item.Call
                                </td>
                                <td>
                                    @item.Skype
                                </td>
                                <td>
                                    @item.Facebook
                                </td>
                                <td>
                                    @item.Pinterest
                                </td>
                                <td>
                                    @item.Vkontakte
                                </td>
                                <td>
                                    @item.Twitter
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


