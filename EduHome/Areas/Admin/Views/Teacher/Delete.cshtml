@model Teacher
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <img src="~/img/teacher/@Model.Image" width="400px" height="400px"/>
</div>
<div class="mt-3">
    @Model.FullName
</div>
<div class="mt-3">
    @Model.Position
</div>
<div class="mt-3">
    @Model.About
</div>
<div class="mt-3">
    @Model.Degree
</div>
<div class="mt-3">
    @Model.Experience
</div>
<div class="mt-3">
    @Model.Hobbies
</div>
<div class="mt-3">
    @Model.Faculty
</div>
<div class="mt-3">
    @Model.Mail
</div>
<div class="mt-3">
    @Model.Call
</div>
<div class="mt-3">
    @Model.Skype
</div>
<div class="mt-3">
    @Model.Facebook
</div>
<div class="mt-3">
    @Model.Pinterest
</div>
<div class="mt-3">
    @Model.Vkontakte
</div>
<div class="mt-3">
    @Model.Twitter
</div>
<div class="row mt-3">
    <form method="post">
        <a class="btn btn-dark" asp-action="Index">Go Back</a>
        <input type="submit" class="btn btn-danger ml-3"<i class="mdi mdi-delete"></i></input>
    </form>
</div>