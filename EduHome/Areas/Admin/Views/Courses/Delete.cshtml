@model Courses
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <img src="~/img/course/@Model.Image" width="400px" height="400px"/>
</div>
<div class="mt-3">
    @Model.Title
</div>
<div class="mt-3">
    @Model.Description
</div>
<div class="mt-3">
    @Model.AboutCourses
</div>
<div class="mt-3">
    @Model.HowToApply
</div>
<div class="mt-3">
    @Model.Certification
</div>
<div class="mt-3">
    @Model.Duration
</div>
<div class="mt-3">
    @Model.ClassDuration
</div>
<div class="mt-3">
    @Model.SkillLevel
</div>
<div class="mt-3">
    @Model.Language
</div>
<div class="mt-3">
    @Model.Students
</div>
<div class="mt-3">
    @Model.Assesments
</div>
<div class="mt-3">
    @Model.CourseFee
</div>
<div class="row mt-3">
    <form method="post">
        <a class="btn btn-dark" asp-action="Index">Go Back</a>
        <input type="submit" class="btn btn-danger ml-3"<i class="mdi mdi-delete"></i></input>
    </form>
</div>