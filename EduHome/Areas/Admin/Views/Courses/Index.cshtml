@model IEnumerable<Courses>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Courses</h4>
                <a class="btn btn-success mb-2" asp-action="Create">Create Course</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Starts
                                </th>
                                <th>
                                    Duration
                                </th>
                                <th>
                                    ClassDuration
                                </th>
                                <th>
                                    SkillLevel
                                </th>
                                <th>
                                    Language
                                </th>
                                <th>
                                    Students
                                </th>
                                <th>
                                    Assesments
                                </th>
                                <th>
                                    Categories
                                </th>
                                <th>
                                    CourseFee
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Courses item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/img/course/@item.Image" style="width:100px;height:100px; border-radius:0px " />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Starts
                                </td>
                                <td>
                                    @item.Duration
                                </td>
                                <td>
                                    @item.ClassDuration
                                </td>
                                <td>
                                    @item.SkillLevel
                                </td>
                                <td>
                                    @item.Language
                                </td>
                                <td>
                                    @item.Students
                                </td>
                                <td>
                                    @item.Assesments
                                </td>
                                <td>
                                    <ul>

                                        @foreach (var category in item.CategoryCourses)
                                        {
                                            if (category != null)
                                            {
                                                <li style="list-style:none">@category?.Category?.Name</li>
                                            }
                                        }
                                    </ul>
                                </td>
                                <td>
                                    @item.CourseFee
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

