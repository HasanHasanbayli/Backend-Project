@model CreateCoursesVM
@{
    ViewData["Title"] = "Create";
}
<div class="row mt-3">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Slider</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Name">
                        <span asp-validation-for="Photo" class="text-danger"></span>

                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="descroption">
                        <span asp-validation-for="Title" class="text-danger"></span>

                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="descroption">
                        <span asp-validation-for="Description" class="text-danger"></span>

                        <label asp-for="AboutCourses"></label>
                        <input asp-for="AboutCourses" class="form-control" placeholder="descroption">
                        <span asp-validation-for="AboutCourses" class="text-danger"></span>

                        <label asp-for="HowToApply"></label>
                        <input asp-for="HowToApply" class="form-control" placeholder="descroption">
                        <span asp-validation-for="HowToApply" class="text-danger"></span>

                        <label asp-for="Certification"></label>
                        <input asp-for="Certification" class="form-control" placeholder="title">
                        <span asp-validation-for="Certification" class="text-danger"></span>

                        <label asp-for="Starts"></label>
                        <input asp-for="Starts" class="form-control" placeholder="title">
                        <span asp-validation-for="Starts" class="text-danger"></span>

                        <label asp-for="Duration"></label>
                        <input asp-for="Duration" class="form-control" placeholder="title">
                        <span asp-validation-for="Duration" class="text-danger"></span>

                        <label asp-for="ClassDuration"></label>
                        <input asp-for="ClassDuration" class="form-control" placeholder="title">
                        <span asp-validation-for="ClassDuration" class="text-danger"></span>

                        <label asp-for="SkillLevel"></label>
                        <input asp-for="SkillLevel" class="form-control" placeholder="title">
                        <span asp-validation-for="SkillLevel" class="text-danger"></span>

                        <label asp-for="Language"></label>
                        <input asp-for="Language" class="form-control" placeholder="title">
                        <span asp-validation-for="Language" class="text-danger"></span>

                        <label asp-for="Students"></label>
                        <input asp-for="Students" class="form-control" placeholder="title">
                        <span asp-validation-for="Students" class="text-danger"></span>

                        <label asp-for="Assesments"></label>
                        <input asp-for="Assesments" class="form-control" placeholder="title">
                        <span asp-validation-for="Assesments" class="text-danger"></span>

                        <label asp-for="CourseFee"></label>
                        <input asp-for="CourseFee" class="form-control" placeholder="title">
                        <span asp-validation-for="CourseFee" class="text-danger"></span>
                        <div class="form-group">
                            @foreach (var item in ViewBag.Categories)
                            {
                                <label>@item.Name</label>
                                <input type="checkbox" name="List" value="@item.Id" style="display:block" />
                            }
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning mr-2">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>